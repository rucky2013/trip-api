<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ulplanet.trip.dao.PhoneFeedbackDao">
    <insert id="insert">
      INSERT INTO phone_feedback
      (
        id,
        funtion_id,
        user_code,
        score,
        feedback,
        create_date
      )VALUES
      (
        #{id},
        #(functionId),
        #{userCode},
        #{score},
        #{feedback},
        #{createDate}
      )
    </insert>

    <insert id="inserts">
        INSERT INTO phone_feedback
          (
            id,
            funtion_id,
            user_code,
            score,
            feedback,
            create_date
          )VALUES
        <foreach collection="list" item="item" index="index" separator="," >
            (
                #{item.id},
                #{item.functionId},
                #{item.userCode},
                #{item.score},
                #{item.feedback},
                #{item.createDate}
            )
        </foreach>
    </insert>

    <insert id="insertFunction">
        INSERT INTO phone_function
        (
            id,
            name,
            `type`
        )VALUES
        (
            #{id},
            #(name),
            #{type}
        )
    </insert>

    <update id="updateFunction">
        UPDATE phone_function SET
        name = #{name}
        where id = #{id}
    </update>

    <select id="getPhoneFunction" resultType="com.ulplanet.trip.bean.PhoneFeedback">
        SELECT id,name,`type`
        FROM phone_function
    </select>

</mapper>